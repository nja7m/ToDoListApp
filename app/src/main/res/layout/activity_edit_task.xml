<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/background">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="259dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:cardCornerRadius="25dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextEditTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:layout_marginTop="21dp"
                android:ems="10"
                android:hint="Task Title"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextEditDescription"
                android:layout_width="226dp"
                android:layout_height="123dp"
                android:layout_marginStart="59dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="38dp"
                android:background="@drawable/text_view_bg"
                android:ems="10"
                android:hint="Description"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewEditTime" />

            <ImageView
                android:id="@+id/imageViewEditTime"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginStart="47dp"
                android:layout_marginTop="22dp"
                app:layout_constraintStart_toEndOf="@+id/textViewEditTaskDate"
                app:layout_constraintTop_toBottomOf="@+id/editTextEditTitle"
                app:srcCompat="@drawable/clock" />

            <ImageView
                android:id="@+id/imageViewEditDate"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="88dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/calendar" />

            <TextView
                android:id="@+id/textViewEditTaskDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="25dp"
                android:hint="Date"
                app:layout_constraintStart_toEndOf="@+id/imageViewEditDate"
                app:layout_constraintTop_toBottomOf="@+id/editTextEditTitle" />

            <TextView
                android:id="@+id/textViewEditTaskTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="28dp"
                android:hint="Time"
                app:layout_constraintStart_toEndOf="@+id/imageViewEditTime"
                app:layout_constraintTop_toBottomOf="@+id/editTextEditTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButtonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ic_baseline_add_24"
        android:src="@drawable/ic_baseline_add_24"
        android:tint="#C5A8A7"
        app:backgroundTint="#FFE2E1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="#FFE2E1" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButtonCancelEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ic_baseline_clear_24"
        android:src="@drawable/ic_baseline_clear_24"
        android:tint="#C5A8A7"
        app:backgroundTint="#FFE2E1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#FFE2E1" />

</androidx.constraintlayout.widget.ConstraintLayout>


